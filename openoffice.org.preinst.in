#!/bin/sh

set -e

# preinst script for openoffice.org

THIS_PACKAGE=openoffice.org
THIS_SCRIPT=preinst

#INCLUDE_SHELL_LIB#

case "$1" in
	install|upgrade)
		if dpkg --compare-versions "$2" lt "2.0.0-1"; then
			prep_rm_conffile "/etc/openoffice/sofficerc"
			prep_rm_conffile "/etc/openoffice/psprint.conf"
		fi
	;;
esac

#DEBHELPER#

exit 0
