#!/bin/sh

# postinst script for openoffice.org2-jars-native

THIS_PACKAGE=openoffice.org2-jars-native
THIS_SCRIPT=postinst

set -e

if [ "$1" = "configure" ]; then
	if [ ! -d /var/lib/openoffice2 ]; then
		mkdir -p /var/lib/openoffice2
	fi
	echo -n "Registering native jars... "
	if [ -e /var/lib/openoffice2/openoffice.org.gcjdb ]; then
		gcj-dbtool-4.0 -n /var/lib/openoffice2/openoffice.org.gcjdb
	fi
	for i in `find /usr/lib/openoffice2/program/classes-native -type f`; do
		gcj-dbtool-4.0 -a /var/lib/openoffice2/openoffice.org.gcjdb \
			/usr/share/java/openoffice2/`basename $i .so` $i
	done
	echo "done."
fi

exit 0
