#!/bin/sh

# preinst script for broffice.org

THIS_PACKAGE=broffice.org
THIS_SCRIPT=preinst

set -e

#INCLUDE_SHELL_LIB#

DIVERSIONS="/usr/lib/openoffice/program/bootstraprc /usr/lib/openoffice/program/versionrc /usr/lib/openoffice//share/registry/data/org/openoffice/Setup.xcu /usr/share/applications/ooo-calc.desktop /usr/share/applications/ooo-writer.desktop /usr/share/applications/ooo-draw.desktop /usr/share/applications/ooo-base.desktop /usr/share/applications/ooo-impress.desktop /usr/share/applications/usr/share/applications/ooo-math.desktop /usr/lib/openoffice/program/intro.bmp"

LANGPACKISOS="@LANGPACKISOS@"

if [ "$1" = "install" ]; then
	for i in $DIVERSIONS; do
		dpkg-divert --package $THIS_PACKAGE --add --rename --divert $i.ooo $i
	done
	for i in $LANGPACKISOS; do
		dpkg-divert --package $THIS_PACKAGE --add --rename --divert /usr/lib/openoffice/program/resource/ooo680$i.res.ooo /usr/lib/openoffice/program/resource/ooo680$i.res
	done
fi

#DEBHELPER#

