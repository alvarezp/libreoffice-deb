#!/bin/sh

# postrm script for openoffice.org-gcj

THIS_PACKAGE=openoffice.org-gcj
THIS_SCRIPT=postrm

set -e

if [ "$1" = "remove" ]; then
	find /usr/share/gcj-4.0/classmap.d -name "*.db" -print0 \
		| gcj-dbtool-4.0 -0 -m /var/lib/gcj-4.0/classmap.db.tmp && \
	mv /var/lib/gcj-4.0/classmap.db.tmp /var/lib/gcj-4.0/classmap.db
fi

exit 0
