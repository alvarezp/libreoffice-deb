#!/bin/sh

set -e

THIS_PACKAGE=broffice.org
THIS_SCRIPT=postinst

#INCLUDE_SHELL_LIB#

case "$1" in configure)
        if [ -n "$2" ]; then
		if dpkg --compare-versions $2 lt 1:3.3.0~beta3; then
                	dpkg-divert --package $THIS_PACKAGE --remove --rename --divert /@OOBRANDDIR@/program/intro.bmp.ooo /@OOBRANDDIR@/program/intro.bmp
                	dpkg-divert --package $THIS_PACKAGE --remove --rename --divert /@OOBRANDDIR@/program/versionrc.ooo /@OOBRANDDIR@/program/versionrc
        		for i in $LANGPACKISOS; do
                		dpkg-divert --package $THIS_PACKAG --remove --rename --divert /@OOBRANDDIR@/program/resource/ooo$i.res.ooo /@OOBRANDDIR@/program/resource/ooo$i.res
        		done
		fi
        fi
esac

#DEBHELPER#

