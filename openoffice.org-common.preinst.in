#!/bin/sh

# postinst script for openoffice.org-common

THIS_PACKAGE=openoffice.org-common
THIS_SCRIPT=preinst

set -e

if [ "$1" = "configure" ]; then
	update-openoffice-dicts
fi

case "$1" in "install|upgrade")
	if dpkg --compare-versions "$2" lt "2.0.0-1"; then
		rm_conffile "/etc/bash_completion.d/openoffice"
		rm_conffile "/etc/openoffice/autoresponse.conf"
	fi
	;;
esac
	
exit 0
