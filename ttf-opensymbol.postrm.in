#!/bin/sh
# postrm script for ttf-opensymbol

THIS_PACKAGE=ttf-opensymbol
THIS_SCRIPT=postrm

set -e

#INCLUDE_SHELL_LIB#

if [ "$1" = "remove" ] && [ -x /usr/bin/fc-cache ]; then
	echo "Updating fontconfig cache..."
	fc-cache -f
fi

if [ "$1" = "purge" ]; then
	rm -f /usr/share/fonts/truetype/openoffice/fonts.cache*
fi

#DEBHELPER#

exit 0
