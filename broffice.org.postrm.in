#!/bin/sh

# postrm script for broffice.org

THIS_PACKAGE=broffice.org
THIS_SCRIPT=postrm

set -e

#INCLUDE_SHELL_LIB#

DIVERSIONS="/@OODIR@/program/bootstraprc /@OODIR@/program/versionrc /@OODIR@/share/registry/data/org/openoffice/Setup.xcu /usr/share/applications/ooo@VER@-calc.desktop /usr/share/applications/ooo@VER@-writer.desktop /usr/share/applications/ooo@VER@-draw.desktop /usr/share/applications/ooo@VER@-base.desktop /usr/share/applications/ooo@VER@-impress.desktop /usr/share/applications/ooo@VER@-math.desktop /usr/share/applications/ooo@VER@-extension.desktop /usr/share/applications/ooo@VER@-template.desktop /usr/share/application-registry/openoffice.applications"
DIVERSIONS="$DIVERSIONS /@OODIR@/program/intro.bmp /@OODIR@/program/about.bmp"

LANGPACKISOS="@LANGPACKISOS@"

if [ "$1" = "remove" ]; then
	for i in $DIVERSIONS; do
		dpkg-divert --package $THIS_PACKAGE --remove --rename --divert $i.ooo $i
	done
        for i in $LANGPACKISOS; do
		dpkg-divert --package $THIS_PACKAGE --remove --rename --divert /@OODIR@/program/resource/ooo680$i.res.ooo /@OODIR@/program/resource/ooo680$i.res
	done
fi

#DEBHELPER#

