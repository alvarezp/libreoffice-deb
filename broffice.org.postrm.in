LANGPACKISOS="@LANGPACKISOS@"

if [ "$1" = "remove" -o "$1" = "abort-install" -o "$1" = "disappear" ]; then
	for i in $DIVERSIONS; do
		dpkg-divert --package $DPKG_MAINTSCRIPT_PACKAGE --remove --rename --divert $i.ooo $i
	done
fi

