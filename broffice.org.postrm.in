#!/bin/sh

set -e

#INCLUDE_SHELL_LIB#

DIVERSIONS="/@OOBRANDDIR@/program/bootstraprc /@OOBRANDDIR@/program/versionrc /@OOBRANDDIR@/share/registry/brand.xcd /usr/share/applications/libreoffice@VER@-calc.desktop /usr/share/applications/libreoffice@VER@-writer.desktop /usr/share/applications/libreoffice@VER@-draw.desktop /usr/share/applications/libreoffice@VER@-base.desktop /usr/share/applications/libreoffice@VER@-impress.desktop /usr/share/applications/libreoffice@VER@-math.desktop /usr/share/applications/libreoffice@VER@-extensionmgr.desktop /usr/share/applications/libreoffice@VER@-startcenter.desktop /usr/share/applications/libreoffice@VER@-javafilter.desktop /usr/share/application-registry/openoffice.applications /usr/share/mimelnk/application/vnd.openofficeorg.extension.desktop /usr/share/mime-info/openoffice.keys /usr/share/templates/soffice.odt.desktop /usr/share/templates/soffice.ods.desktop /usr/share/templates/soffice.odp.desktop /usr/share/templates/soffice.odg.desktop"
